<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:elevation="4dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="8dp"
            android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:background="#D8D8D8"
            android:layout_height="match_parent">

        <TextView
                android:text="Titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/title"
                android:layout_margin="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="24sp"/>
        <TextView
                android:text="50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/pages"
                android:layout_toRightOf="@+id/title"
                android:layout_margin="16dp"
                android:textSize="24sp"/>
        <TextView
                android:text="Descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/description"
                android:layout_below="@+id/title"
                android:layout_margin="16dp"
                android:textSize="18sp" android:textStyle="italic"/>
    </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>
